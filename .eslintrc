{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "react-app",
    "airbnb",
    "prettier"
  ],
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion":  2018,
    "sourceType":  "module",
    "ecmaFeatures": {
      "jsx":  true
    }
  },
  "rules":  {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }],
  }
}
